/* pages/detail/detail.wxss */
.container {
  background-color: #fff;
  padding-bottom: 140rpx;
}

.detail-header {
  position: relative;
}

.back-button {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  width: 72rpx;
  height: 72rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.back-button image {
  width: 32rpx;
  height: 32rpx;
}

.detail-image {
  width: 100%;
  height: 600rpx;
  background-color: #f8f8f8;
}

.detail-content {
  padding: 30rpx;
}

.detail-price {
  font-size: 48rpx;
  margin-bottom: 20rpx;
}

.detail-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.detail-meta {
  margin-bottom: 30rpx;
}

.seller-info {
  display: flex;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.seller-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.seller-name {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.seller-rating {
  display: flex;
  align-items: center;
}

.seller-rating image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.seller-rating text {
  font-size: 24rpx;
  color: #ffc107;
  margin-left: 10rpx;
}

.description-title {
  font-size: 32rpx;
  font-weight: 500;
  margin: 20rpx 0;
}

.description-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-secondary);
  margin-bottom: 20rpx;
  white-space: pre-wrap;
}

.description-meta {
  margin-top: 20rpx;
}

.detail-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 30rpx;
  background-color: #fff;
  border-top: 1px solid var(--border-color);
}

.action-button {
  padding: 25rpx 0;
}

.btn-outline {
  flex: 1;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-outline image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.btn-primary {
  flex: 2;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}