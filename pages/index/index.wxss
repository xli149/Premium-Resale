/* pages/index/index.wxss */
.container {
  padding-bottom: 120rpx;
}

.header {
  padding: 30rpx;
  background-color: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
}

.notification {
  width: 40rpx;
  height: 40rpx;
}

.search-bar {
  margin: 20rpx 30rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.categories {
  display: flex;
  padding: 20rpx 30rpx;
  white-space: nowrap;
}

.category {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  width: 100rpx;
}

.category-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 16rpx;
}

.category-icon image {
  width: 48rpx;
  height: 48rpx;
}

.category-name {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx 30rpx;
}

.product-item {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 300rpx;
  background-color: #f8f8f8;
}

.product-info {
  padding: 20rpx;
}

.product-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 80rpx;
}

.product-price {
  font-size: 32rpx;
  margin: 10rpx 0;
}

.product-meta {
  margin-top: 10rpx;
}

.publish-button {
  position: fixed;
  right: 40rpx;
  bottom: 160rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 6rpx 20rpx rgba(52, 152, 219, 0.3);
  z-index: 100;
}

.publish-button image {
  width: 48rpx;
  height: 48rpx;
}