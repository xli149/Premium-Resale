/* pages/discover/discover.wxss */
.container {
  padding-bottom: 30rpx;
}

.header {
  padding: 30rpx;
  background-color: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
}

.discover-intro {
  background-color: #f0f7ff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.intro-text {
  font-size: 28rpx;
  color: var(--primary-color);
  text-align: center;
}

.section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 10rpx;
  width: 8rpx;
  height: 32rpx;
  background-color: var(--primary-color);
  border-radius: 4rpx;
}

.product-list {
  display: flex;
  flex-direction: column;
}

.product-item {
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.product-image {
  width: 100%;
  height: 300rpx;
  background-color: #f8f8f8;
}

.product-info {
  padding: 20rpx;
}

.product-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 80rpx;
}

.product-price {
  font-size: 32rpx;
  margin: 10rpx 0;
}

.product-meta {
  margin-top: 10rpx;
}